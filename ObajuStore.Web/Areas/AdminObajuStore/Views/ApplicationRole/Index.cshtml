@model IEnumerable<ObajuStore.Web.Models.ApplicationRoleViewModel>

@{
    ViewBag.Title = "Danh sách quyền truy cập";
    Layout = "~/Areas/AdminObajuStore/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title.ToUpper()
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <div class="col-md-12">
                        <div class="col-md-8">
                            @using (Html.BeginForm("Index", "ApplicationRole", FormMethod.Get))
                            {
                                <div class="form-inline">
                                    <input type="text" id="filter" value="@ViewBag.Filter" name="filter" class="form-control " placeholder="Nhập từ khóa..." />
                                    <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-success pull-right"><i class="fa fa-plus"></i> @Html.ActionLink("Thêm mới", "Create", new { controller = "ApplicationRole" }, new { @class = "non-decoration" })</button>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:15%">Tên quyền truy cập</th>
                                    <th>Mô tả</th>
                                    <th style="width:15%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.Name</td>
                                            <td><a href="/AdminObajuStore/ApplicationRole/Edit/@role.Id">@role.Description</a></td>

                                            <td>
                                                <a href="/AdminObajuStore/ApplicationRole/Edit/@role.Id" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                                <button type="button" class="btn btn-sm btn-danger btnDelete" data-id="@role.Id"><i class="fa fa-trash-o"></i></button>

                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">không có dữ liệu...</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div><!-- /.box-body -->

            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

@section scripts{<script src="~/Assets/Admin/js/deleteRole.js"></script>
}
